public class TicketMachine
{
    private int price;
    private int balance;
    private int total;
    private boolean laMaquinaDaPremios;
    private int numeroBilletesVendidos;
    private int numeroMaximoBilletes;

    public TicketMachine(int cost, boolean daPremios, int maximoBilletes)
    {
        price = cost;
        balance = 0;
        total = 0;
        laMaquinaDaPremios = daPremios;
        numeroBilletesVendidos = 0;
        numeroMaximoBilletes = maximoBilletes;
    }

    public int getPrice()
    {
        return price;
    }

    public int getBalance()
    {
        return balance;
    }

    public void insertMoney(int amount)
    {
        if(amount > 0) {
            balance = balance + amount;
        }
        else {
            System.out.println("Use a positive amount rather than: " + amount);
        }
    }

    public void printTicket()
    {
        if (numeroBilletesVendidos < numeroMaximoBilletes) {
            if(balance >= price) {
                System.out.println("##################");
                System.out.println("# The BlueJ Line");
                System.out.println("# Ticket");
                System.out.println("# " + price + " cents.");
                System.out.println("##################");
                System.out.println();

                total = total + price;
                balance = balance - price;
                
                numeroBilletesVendidos = numeroBilletesVendidos + 1;
                
                if (laMaquinaDaPremios == true) {
                    System.out.println("##################");
                    System.out.println("# The BlueJ Line");
                    System.out.println("# Ticket de regalo");
                    System.out.println("##################");
                    System.out.println();
                }
                  
            }
            else {
                int amountLeftToPay = price - balance;
                System.out.println("You must insert at least: " + amountLeftToPay + " more cents.");        
            }
        }
        else {
            System.out.println("Vendidos todos los billetes disponibles.");
        }
    }

    public int refundBalance()
    {
        int amountToRefund;
        amountToRefund = balance;
        balance = 0;
        return amountToRefund;
    }
    
    public int emptyMachine()
    {
        if (balance > 0) {
            return -1;
        }
        else {
            int oldTotal = total;
            total = 0;
            return oldTotal;            
        }
    }
}
